<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/s000000sw1bdef9c4">

    <!-- Header Section -->
    <TextView
        android:id="@+id/egwf3ruvf3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="1dp"
        android:textColor="#50B498" />

    <TextView
        android:id="@+id/gdeufbfvie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plantfy App"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="54dp"
        android:textColor="#50B498" />

    <!-- User Information Section -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User ID "
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/darker_gray" />

    <!-- Action Button Section -->
    <Button
        android:id="@+id/wnduw123mjdjab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next to App"
        android:backgroundTint="#50B498"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnEmailVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Verification Email"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white" />

</LinearLayout>