<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page_Register">

    <!-- Root LinearLayout -->
    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ScrollView for content -->
        <ScrollView
            android:id="@+id/r82tplynfnsn"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:background="#DEF9C4"
            android:clipToPadding="false"
            android:paddingTop="131dp">

            <!-- Main LinearLayout inside ScrollView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Logo -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/r2z9en1y01mk"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginHorizontal="120dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/logoplantfy"
                    app:shapeAppearanceOverlay="@style/cr20" />

                <!-- Title -->
                <TextView
                    android:id="@+id/r5jkazkuk22v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginBottom="22dp"
                    android:text="Create Your Account"
                    android:textColor="#50B498"
                    android:textSize="34sp" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/rwaov4uhn48h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="63dp"
                    android:layout_marginBottom="23dp"
                    android:text="Create Your Account With Email And Password "
                    android:textColor="#468585"
                    android:textSize="12sp" />

                <!-- Email Input Layout -->
                <LinearLayout
                    android:id="@+id/ra7o656f9qee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginBottom="26dp"
                    android:background="@drawable/cr10bffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/rxxlr8x8fxq8"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/vector"
                        android:scaleType="fitXY" />

                    <EditText
                        android:id="@+id/rbdcoy5avxur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/edit_text_background"
                        android:textColor="#468585"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Password Input Layout -->
                <LinearLayout
                    android:id="@+id/rnx5cdgw08p9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginBottom="41dp"
                    android:background="@drawable/cr10bffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="17dp">

                    <ImageView
                        android:id="@+id/ri0qbrjeazso"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/password"
                        android:scaleType="fitXY"/>

                    <EditText
                        android:id="@+id/rkgoudy84rn"
                        android:textColor="#468585"
                        android:textSize="13sp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/edit_text_background"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:hint="Password"/>

                </LinearLayout>

                <!-- Login Button -->
                <LinearLayout
                    android:id="@+id/rx5u9nzz18sd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginBottom="68dp"
                    android:background="@drawable/cr10b50b498"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingVertical="18dp">

                    <TextView
                        android:id="@+id/rq86folwtqbd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOGIN"
                        android:textColor="#DEF9C4"
                        android:textSize="20sp" />

                </LinearLayout>

                <!-- Terms and Conditions -->
                <TextView
                    android:id="@+id/r7ho63v414wi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="49dp"
                    android:layout_weight="1"
                    android:text="by creating an account i agree to binance terms of service and privacy policy"
                    android:textColor="#50B498"
                    android:layout_marginBottom="22dp"
                    android:textSize="13sp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>